<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- ============================================================== -->
<!-- ================可直接使用Base配置文件中定义的节点！================ -->
<!-- ============================================================== -->
<mapper namespace="com.lawfirm.lawfirmserver.lawyer.dao.LawyerDao">
    <!-- 请在下方添加自定义配置-->

    <!-- 插入一条记录(为空的字段不操作) -->
    <insert id="insertSelectiveAndBackId" parameterType="com.lawfirm.lawfirmserver.lawyer.po.Lawyer">
        <selectKey keyProperty="id" resultType="Long" order="AFTER">
            SELECT LAST_INSERT_ID() AS value
        </selectKey>
        insert into lawyer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="lawyerName != null">
                lawyerName,
            </if>
            <if test="lawFirm != null">
                lawFirm,
            </if>
            <if test="lawyerLicenseNumber != null">
                lawyerLicenseNumber,
            </if>
            <if test="provinceCode != null">
                provinceCode,
            </if>
            <if test="cityCode != null">
                cityCode,
            </if>
            <if test="districtCode != null">
                districtCode,
            </if>
            <if test="lawyerIntroduction != null">
                lawyerIntroduction,
            </if>
            <if test="lawyerDetails != null">
                lawyerDetails,
            </if>
            <if test="workYears != null">
                workYears,
            </if>
            <if test="rating != null">
                rating,
            </if>
            <if test="isValidFlag != null">
                isValidFlag,
            </if>
            operateTimeForHis,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="lawyerName != null">
                #{lawyerName},
            </if>
            <if test="lawFirm != null">
                #{lawFirm},
            </if>
            <if test="lawyerLicenseNumber != null">
                #{lawyerLicenseNumber},
            </if>
            <if test="provinceCode != null">
                #{provinceCode},
            </if>
            <if test="cityCode != null">
                #{cityCode},
            </if>
            <if test="districtCode != null">
                #{districtCode},
            </if>
            <if test="lawyerIntroduction != null">
                #{lawyerIntroduction},
            </if>
            <if test="lawyerDetails != null">
                #{lawyerDetails},
            </if>
            <if test="workYears != null">
                #{workYears},
            </if>
            <if test="rating != null">
                #{rating},
            </if>
            <if test="isValidFlag != null">
                #{isValidFlag},
            </if>
            now(),
        </trim>
    </insert>

    <!-- 查询条件片段 -->
    <sql id="Where_Clause">
        <where>
            <!-- 默认只查询有效的律师 -->
            isValidFlag = '1'
            <!-- 关键词模糊搜索 -->
            <if test="query.keyword != null and query.keyword != ''">
                AND (
                    lawyerName LIKE CONCAT('%', #{query.keyword}, '%')
                    OR lawyerIntroduction LIKE CONCAT('%', #{query.keyword}, '%')
                )
            </if>
            <!-- 专业领域筛选 (通过关联表查询) -->
            <if test="query.specialty != null and query.specialty != ''">
                AND EXISTS (
                    SELECT 1 FROM lawyerSpecialtyRelation lsr
                    JOIN lawyerSpecialty ls ON lsr.specialtyId = ls.id
                    WHERE lsr.lawyerId = lawyer.id 
                    AND (
                        ls.specialtyName = #{query.specialty}
                        OR ls.specialtyName LIKE CONCAT('%', #{query.specialty}, '%')
                    )
                )
            </if>
            
            <!-- 排除特定专业领域 -->
            <if test="query.excludeSpecialties != null and query.excludeSpecialties.size() > 0">
                AND NOT EXISTS (
                    SELECT 1 FROM lawyerSpecialtyRelation lsr
                    JOIN lawyerSpecialty ls ON lsr.specialtyId = ls.id
                    WHERE lsr.lawyerId = lawyer.id 
                    AND ls.specialtyName IN
                    <foreach collection="query.excludeSpecialties" item="excludeSpecialty" open="(" separator="," close=")">
                        #{excludeSpecialty}
                    </foreach>
                )
            </if>
            <!-- 地区筛选 -->
            <if test="query.provinceCode != null and query.provinceCode != ''">
                AND provinceCode = #{query.provinceCode}
            </if>
            <if test="query.cityCode != null and query.cityCode != ''">
                AND cityCode = #{query.cityCode}
            </if>
            <if test="query.districtCode != null and query.districtCode != ''">
                AND districtCode = #{query.districtCode}
            </if>
            <!-- 是否推荐筛选 -->
            <if test="query.recommend != null">
                AND recommend = #{query.recommend}
            </if>
        </where>
    </sql>

    <!-- 根据条件统计律师记录数 -->
    <select id="countByCondition" resultType="long">
        SELECT COUNT(*)
        FROM lawyer
        <include refid="Where_Clause"/>
    </select>

    <!-- 根据条件查询律师列表 -->
    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT 
            <include refid="Base_Column_List"/>
        FROM lawyer
        <include refid="Where_Clause"/>
        <if test="query.orderBy != null and query.orderBy != ''">
            ORDER BY ${query.orderBy}
        </if>
        LIMIT #{offset}, #{limit}
    </select>
</mapper>