<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- ============================================================== -->
<!-- ================可直接使用Base配置文件中定义的节点！================ -->
<!-- ============================================================== -->
<mapper namespace="com.lawfirm.lawfirmserver.lawyer.dao.LawyerDao">
    <!-- 请在下方添加自定义配置-->

    <!-- 插入一条记录(为空的字段不操作) -->
    <insert id="insertSelectiveAndBackId" parameterType="com.lawfirm.lawfirmserver.lawyer.po.Lawyer">
        <selectKey keyProperty="id" resultType="Long" order="AFTER">
            SELECT LAST_INSERT_ID() AS value
        </selectKey>
        insert into lawyer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="lawyerName != null">
                lawyerName,
            </if>
            <if test="lawFirm != null">
                lawFirm,
            </if>
            <if test="lawyerLicenseNumber != null">
                lawyerLicenseNumber,
            </if>
            <if test="provinceCode != null">
                provinceCode,
            </if>
            <if test="cityCode != null">
                cityCode,
            </if>
            <if test="districtCode != null">
                districtCode,
            </if>
            <if test="lawyerIntroduction != null">
                lawyerIntroduction,
            </if>
            <if test="lawyerDetails != null">
                lawyerDetails,
            </if>
            <if test="workYears != null">
                workYears,
            </if>
            <if test="rating != null">
                rating,
            </if>
            <if test="isValidFlag != null">
                isValidFlag,
            </if>
            operateTimeForHis,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="lawyerName != null">
                #{lawyerName},
            </if>
            <if test="lawFirm != null">
                #{lawFirm},
            </if>
            <if test="lawyerLicenseNumber != null">
                #{lawyerLicenseNumber},
            </if>
            <if test="provinceCode != null">
                #{provinceCode},
            </if>
            <if test="cityCode != null">
                #{cityCode},
            </if>
            <if test="districtCode != null">
                #{districtCode},
            </if>
            <if test="lawyerIntroduction != null">
                #{lawyerIntroduction},
            </if>
            <if test="lawyerDetails != null">
                #{lawyerDetails},
            </if>
            <if test="workYears != null">
                #{workYears},
            </if>
            <if test="rating != null">
                #{rating},
            </if>
            <if test="isValidFlag != null">
                #{isValidFlag},
            </if>
            now(),
        </trim>
    </insert>

    <!-- 查询条件片段 -->
    <sql id="Where_Clause">
        <where>
            <!-- 默认只查询有效的律师 -->
            l.isValidFlag = '1'
            <!-- 关键词模糊搜索 -->
            <if test="query.keyword != null and query.keyword != ''">
                AND (
                    l.lawyerName LIKE CONCAT('%', #{query.keyword}, '%')
                    OR l.lawyerIntroduction LIKE CONCAT('%', #{query.keyword}, '%')
                )
            </if>
            <!-- 专业领域筛选 (通过关联表查询) -->
            <if test="query.specialty != null and query.specialty != ''">
                AND EXISTS (
                    SELECT 1 FROM lawyerSpecialtyRelation lsr
                    JOIN lawyerSpecialty ls ON lsr.specialtyId = ls.id
                    WHERE lsr.lawyerId = l.id 
                    AND (
                        ls.specialtyName = #{query.specialty}
                        OR ls.specialtyName LIKE CONCAT('%', #{query.specialty}, '%')
                    )
                )
            </if>
            
            <!-- 排除特定专业领域 -->
            <if test="query.excludeSpecialties != null and query.excludeSpecialties.size() > 0">
                AND NOT EXISTS (
                    SELECT 1 FROM lawyerSpecialtyRelation lsr
                    JOIN lawyerSpecialty ls ON lsr.specialtyId = ls.id
                    WHERE lsr.lawyerId = l.id 
                    AND ls.specialtyName IN
                    <foreach collection="query.excludeSpecialties" item="excludeSpecialty" open="(" separator="," close=")">
                        #{excludeSpecialty}
                    </foreach>
                )
            </if>
            <!-- 地区筛选 -->
            <if test="query.provinceCode != null and query.provinceCode != ''">
                AND l.provinceCode = #{query.provinceCode}
            </if>
            <if test="query.cityCode != null and query.cityCode != ''">
                AND l.cityCode = #{query.cityCode}
            </if>
            <if test="query.districtCode != null and query.districtCode != ''">
                AND l.districtCode = #{query.districtCode}
            </if>
            <!-- 是否推荐筛选 -->
            <if test="query.recommend != null">
                AND l.recommend = #{query.recommend}
            </if>
            <!-- 从业年限范围筛选 -->
            <if test="query.experienceMin != null">
                AND l.workYears <![CDATA[ >= ]]> #{query.experienceMin}
            </if>
            <if test="query.experienceMax != null">
                AND l.workYears <![CDATA[ <= ]]> #{query.experienceMax}
            </if>
        </where>
    </sql>

    <!-- 根据条件统计律师记录数 -->
    <select id="countByCondition" resultType="long">
        SELECT COUNT(*)
        FROM lawyer l
        <include refid="Where_Clause"/>
    </select>

    <!-- 根据条件查询律师列表 -->
    <select id="selectByCondition" resultMap="LawyerInfoDTOResultMap">
        SELECT 
            l.*,
            u.id as userId,
            img.imageData as avatarData,
            img.fileExtension as avatarExtension
        FROM lawyer l
        LEFT JOIN users u ON l.id = u.relatedEntityId AND u.userType = 'lawyer' AND u.isValidFlag = '1'
        LEFT JOIN (
            SELECT 
                userId, 
                imageData, 
                fileExtension
            FROM imageStorage 
            WHERE imageType = 'AVATAR'
            AND (userId, insertTimeForHis) IN (
                SELECT 
                    userId, 
                    MAX(insertTimeForHis) 
                FROM imageStorage 
                WHERE imageType = 'AVATAR' 
                GROUP BY userId
            )
        ) img ON u.id = img.userId
        <include refid="Where_Clause"/>
        <if test="query.orderBy != null and query.orderBy != ''">
            ORDER BY ${query.orderBy}
        </if>
        LIMIT #{offset}, #{limit}
    </select>
    
    <!-- 律师信息和头像关联的结果映射 -->
    <resultMap id="LawyerInfoDTOResultMap" type="com.lawfirm.lawfirmserver.lawyer.dto.LawyerInfoDTO" extends="BaseResultMap">
        <result column="userId" property="userId" />
        <result column="avatarData" property="avatarData" />
        <result column="avatarExtension" property="avatarExtension" />
    </resultMap>
</mapper>