<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- ============================================================== -->
<!-- ================可直接使用Base配置文件中定义的节点！================ -->
<!-- ============================================================== -->
<mapper namespace="com.lawfirm.lawfirmserver.lawyer.dao.LawyerSpecialtyRelationDao">
    <!-- 请在下方添加自定义配置-->
    <!-- 按主键List查询多条记录 -->
    <select id="selectBatchByLawyerId" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
        from lawyer_specialty_relation
        where lawyerId = #{lawyerId}
    </select>

    <!-- 批量插入多条记录-->
    <insert id="insertList" parameterType="java.util.List">
        insert into lawyer_specialty_relation (id, lawyer_id, specialty_id, operate_time_for_his)
        values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{id}, #{lawyerId}, #{specialtyId}, now())
        </foreach>

    </insert>

    <!-- 批量更新多条记录-->
    <update id="updateList" parameterType="java.util.List">
        <foreach item="item" index="index" collection="list" separator=";">
            update lawyer_specialty_relation
            set lawyer_id=#{lawyerId}, specialty_id=#{specialtyId},
            operate_time_for_his=now()
            where id = #{item.id}
        </foreach>
    </update>

</mapper>