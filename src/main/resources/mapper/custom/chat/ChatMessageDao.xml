<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- ============================================================== -->
<!-- ================可直接使用Base配置文件中定义的节点！================ -->
<!-- ============================================================== -->
<mapper namespace="com.lawfirm.lawfirmserver.chat.dao.ChatMessageDao">
    <!-- 请在下方添加自定义配置-->

    <!-- 根据会话ID查询消息历史，按发送时间排序 -->
    <select id="selectBySessionId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM chatmessage 
        WHERE sessionId = #{sessionId} 
        ORDER BY sendTime ASC
    </select>

    <!-- 根据会话ID查询未读消息数量 -->
    <select id="countUnreadBySessionId" resultType="int" parameterType="java.lang.Long">
        SELECT COUNT(*) 
        FROM chatmessage 
        WHERE sessionId = #{sessionId} AND isRead = 0
    </select>

</mapper>