<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawfirm.lawfirmserver.order.dao.OrderTimeDao">

    <!-- 基本结果映射 -->
    <resultMap id="BaseResultMap" type="com.lawfirm.lawfirmserver.order.po.OrderTime">
        <id column="orderTimeId" property="orderTimeId"/>
        <result column="orderId" property="orderId"/>
        <result column="timeNode" property="timeNode"/>
        <result column="timeValue" property="timeValue"/>
        <result column="insertTimeForHis" property="insertTimeForHis"/>
        <result column="operateTimeForHis" property="operateTimeForHis"/>
    </resultMap>
    
    <!-- 基本列 -->
    <sql id="Base_Column_List">
        orderTimeId, orderId, timeNode, timeValue, insertTimeForHis, operateTimeForHis
    </sql>
    
    <!-- 根据订单ID查询订单时间列表 -->
    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM orderTimes
        WHERE orderId = #{orderId}
        ORDER BY timeValue ASC
    </select>
    
    <!-- 根据订单ID和时间节点类型查询订单时间 -->
    <select id="selectByOrderIdAndTimeNode" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM orderTimes
        WHERE orderId = #{orderId}
        AND timeNode = #{timeNode}
    </select>
    
    <!-- 根据ID查询订单时间 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM orderTimes
        WHERE orderTimeId = #{orderTimeId}
    </select>
    
    <!-- 插入订单时间记录 -->
    <insert id="insert" parameterType="com.lawfirm.lawfirmserver.order.po.OrderTime" useGeneratedKeys="true" keyProperty="orderTimeId">
        INSERT INTO orderTimes (
            orderId, timeNode, timeValue
        ) VALUES (
            #{orderId}, #{timeNode}, #{timeValue}
        )
    </insert>
    
    <!-- 批量插入订单时间记录 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO orderTimes (
            orderId, timeNode, timeValue
        ) VALUES 
        <foreach collection="list" item="item" separator=",">
            (
                #{item.orderId}, #{item.timeNode}, #{item.timeValue}
            )
        </foreach>
    </insert>
    
    <!-- 更新订单时间记录 -->
    <update id="update" parameterType="com.lawfirm.lawfirmserver.order.po.OrderTime">
        UPDATE orderTimes
        <set>
            <if test="orderId != null">
                orderId = #{orderId},
            </if>
            <if test="timeNode != null">
                timeNode = #{timeNode},
            </if>
            <if test="timeValue != null">
                timeValue = #{timeValue},
            </if>
        </set>
        WHERE orderTimeId = #{orderTimeId}
    </update>
    
    <!-- 根据订单ID和时间节点类型更新时间值 -->
    <update id="updateTimeValueByOrderIdAndTimeNode">
        UPDATE orderTimes
        SET timeValue = #{timeValue}
        WHERE orderId = #{orderId}
        AND timeNode = #{timeNode}
    </update>
    
    <!-- 根据订单ID删除所有时间记录 -->
    <delete id="deleteByOrderId">
        DELETE FROM orderTimes
        WHERE orderId = #{orderId}
    </delete>
    
    <!-- 根据ID删除订单时间记录 -->
    <delete id="deleteById">
        DELETE FROM orderTimes
        WHERE orderTimeId = #{orderTimeId}
    </delete>
    
    <!-- 统计订单的时间节点数量 -->
    <select id="countByOrderId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM orderTimes
        WHERE orderId = #{orderId}
    </select>
</mapper> 